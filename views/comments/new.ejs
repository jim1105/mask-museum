<%- include("../partials/header") %>
	<div class='container'>
		<h1 style='text-align:center'>Create a new comment for <%= mask.name %></h1>
		<div class='row'>
			<div style="width:30%; margin:25px auto;">
				<form action='/masks/<%= mask._id %>/comments' method='post'>
					<div class='form-group'>
						<input class="form-control" type='text' name='comment[text]' placeholder='text'>
					</div>
					<div class='form-group'>
						<button class="btn btn-primary btn-lg btn-block">Submit</button>
					</div>
				</form>
				<a href="/masks/<%= mask._id %>"> Go back</a>
			</div>
		</div>
	</div>
<%- include ("../partials/footer") %>