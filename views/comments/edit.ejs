<%- include("../partials/header") %>
	<div class='container'>
		<h1 style='text-align:center'>Edit comments</h1>
		<div class='row'>
			<div style="width:30%; margin:25px auto;">
				<form action="/masks/<%= mask_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="text">
                	</div>
					<div class='form-group'>
						<button class="btn btn-primary btn-lg btn-block">Submit</button>
					</div>
				</form>
				<a href='/masks'>Go back</a>
			</div>
		</div>
	</div>
<%- include ("../partials/footer") %>