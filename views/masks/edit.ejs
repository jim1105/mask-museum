<%- include("../partials/header") %>
	<div class='container'>
		<h1 style='text-align:center'>Update a mask</h1>
		<div class='row'>
			<div style="width:30%; margin:25px auto;">
				<form action='/masks/<%= mask._id %>/?_method=put' method='post'>
					<div class='form-group'>
						<input class="form-control" type='text' name='mask[name]' value='<%= mask.name %>'>
					</div>
					<div class='form-group'>
						<input class="form-control" type='text' name='mask[image]' value='<%= mask.image %>'>
					</div>
					<div class='form-group'>
						<input class="form-control" type='text' name='mask[description]' value='<%= mask.description %>'>
					</div>
					<div class='form-group'>
						<button class="btn btn-primary btn-lg btn-block">Submit</button>
					</div>
				</form>
				<a href='/masks'>Go back</a>
			</div>
		</div>
	</div>
<%- include ("../partials/footer") %>